<fieldset>
    <legend>{{ text_panel_heading_api }}</legend>
    <div class="form-group required">
        <label class="col-sm-2 control-label" for="entry-api-key">{{ entry_api_key }}</label>
        <div class="col-sm-10">
            <input type="text" name="payment_{{ instance }}_api_key" value="{{ settings.api_key }}" placeholder="{{ entry_api_key }}" id="entry-api-key" class="form-control"/>
            {% if error_api_key %}
                <div class="text-danger">{{ error_api_key }}</div>
            {% endif %}
        </div>
    </div>
    <div class="form-group required">
        <label class="col-sm-2 control-label" for="entry-private-key">{{ entry_private_key }}</label>
        <div class="col-sm-10">
            <input type="text" name="payment_{{ instance }}_private_key" value="{{ settings.private_key }}" placeholder="{{ entry_private_key }}" id="entry-private-key" class="form-control"/>
            {% if error_private_key %}
                <div class="text-danger">{{ error_private_key }}</div>
            {% endif %}
        </div>
    </div>
</fieldset>